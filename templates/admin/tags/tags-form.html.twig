{% extends 'base.html.twig' %}
{% block title %}
	Ajouter un tag
{% endblock %}
{% block body %}
	<h1 class="titre centered">Créer un tag ou mot clé</h1>
	{{ form_start(form) }}
	{{ form_row(form.titre) }}
	{{ form_row(form.icone) }}
	{{ form_row(form.couleur) }}
	{{ form_row(form.parent) }}
	<button class="btn btn-ajout" type="submit"><i class="fa-solid fa-download"></i>Enregistrer</button>
	{{ form_end(form) }}
{% endblock %}
